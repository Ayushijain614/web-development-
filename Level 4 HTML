      </tr>
    </tbody>
  </table>

  <!-- 📝 HTML Form -->

  <h2>Contact Form</h2>
  <form action="submit-form.php" method="POST">
    <!-- action = where form data goes (PHP, server etc.) -->

    <!-- Label + Input -->
    <label for="name">Name:</label>
    <input type="text" id="name" name="username" placeholder="Enter your name">

    <label for="email">Email:</label>
    <input type="email" id="email" name="useremail" placeholder="Enter your email">

    <label for="message">Message:</label>
    <input type="text" id="message" name="usermessage" placeholder="Your message">

    <br><br>
    <input type="submit" value="Send Message">
  </form>

