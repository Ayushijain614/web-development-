  <!-- 📋 HTML Table -->

  <h2>Student Table with Caption, thead & tbody</h2>

  <table>
    <caption>Student Marks</caption>

    <!-- Table Head -->
    <thead>
      <tr>
        <th>Name</th>
        <th>Math</th>
        <th>Science</th>
      </tr>
    </thead>

    <!-- Table Body -->
    <tbody>
      <tr>
        <td>Ayushi</td>
        <td>95</td>
        <td>90</td>
      </tr>
      <tr>
        <td>Rigved</td>
        <td>88</td>
