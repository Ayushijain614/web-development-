    <!-- ðŸ“› Label + Input -->
    <label for="name">Name:</label>
    <input type="text" id="name" name="username"><br><br>

    <!-- âœ… Checkbox -->
    <label><input type="checkbox" name="hobby" value="dance"> Dance</label>
    <label><input type="checkbox" name="hobby" value="music"> Music</label><br><br>

    <!-- ðŸ“‚ Select Dropdown -->
